<%-include("./header.ejs")-%>

<section class="wraper">
    <div class="text-center container" id="login">
        <div class="container pt-3 pb-3" id="frm-block">
            <div class="title pb-3">
                <h4 class="fw-bold pt-2">Login </h4>
            </div>
            <form action="/login" method="POST">
                <div class="form-group pt-0">
                    <input type="text" class="form-control" name="email" id="emailInput"
                        placeholder="email">
                        <div id="emailError"></div>
                </div>
                <div class="form-group pt-3">
                    <input type="password" name="password" id="passwordInput"
                        placeholder="password" class="form-control">
                        
                </div>
                <% if(locals.error){ %>
                    <h6 style="color: red;">gmail and password not match!!</h6>
                <%}%>
                <button type="submit" class="btn btn-success mt-3" onsubmit="validateEmail()" id="submitButton">Login</button>
            </form>
        </div>
    </div>
</section>

<%-include("./footer.ejs")-%>
